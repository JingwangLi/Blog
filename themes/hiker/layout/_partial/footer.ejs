<footer id="footer">
  <% if (theme.sidebar === 'bottom'){ %>
    <%- partial('_partial/sidebar') %>
  <% } %>


  <div class="widget2 widget2_athemes_social_icons">
    <ul class="clearfix widget-social-icons">
    <% Object.keys(theme.social).forEach(function(key) { %>
        <% if (key == 'Email'){ %>
          <li><a href="mailto:<%= theme.social[key] %>" title="<%=key.trim()%>"><i class="fa fa-envelope" aria-hidden="true"></i></a></li>
        <% } else if (key == 'Zhihu' || key == 'Douban'){ %>
          <li><a href="<%= theme.social[key] %>" title="<%=key.trim()%>"><i class="fa iconfont icon-<%= key.toLowerCase() %>" aria-hidden="true"></i></a></li>
        <% } else {%>
          <!-- <li><a href="<%= theme.social[key] %>" title="<%=key.trim()%>"><i class="fa fa-<%= key.toLowerCase() %>" aria-hidden="true"></i></a></li> -->
        <% }%>
    <% }) %>
    </ul>
  </div>



  <div class="container">
      	<div class="row">

	      <p> <%= __('powered_by') %> <a href="http://hexo.io/" target="_blank">Hexo</a> | Theme <a href="https://github.com/JingwangLi/hexo-theme-hiker" target="_blank">Hiker</a> </p>
	      <!-- <p id="copyRightEn">Copyright &copy; <%= theme.since ||  (date(new Date(), 'YYYY')-1)%> - <%= date(new Date(), 'YYYY') %> <%= config.title || config.author %>. All Rights Reserved.</p> -->

        <!-- <div style="display: inline-block;"><p id="copyRightEn">Copyright &copy; <%= theme.since ||  (date(new Date(), 'YYYY')-1)%> - <%= date(new Date(), 'YYYY') %> <%= config.title || config.author %>&nbsp;&nbsp;&nbsp;</div>
        <div class="heart">
           <div class="left"></div>
           <div class="middle"></div>
           <div class="right"></div>
        </div>
        <a href="https://yan.jingwangli.com" target="_blank">&nbsp;&nbsp;Yan Wang</a> -->

        <div><p id="copyRightEn">Copyright &copy; <%= theme.since ||  (date(new Date(), 'YYYY')-1)%> - <%= date(new Date(), 'YYYY') %> <%= config.title || config.author %></div>

	      <% if (theme.show_busuanzi_view_counts){ %>
    		<p class="busuanzi_uv">
				<%= __('site_uv') %> : <span id="busuanzi_value_site_uv"></span> |
				<%= __('site_pv') %> : <span id="busuanzi_value_site_pv"></span>
		    </p>
  		   <% } else { %>
  		   	<!-- <p id="copyRightCn"><%= __('right_reserved', config.author || config.title) %></p> -->
  		   <% } %>

		</div>


  </div>
</footer>


<!-- min height -->

<script>
    var wrapdiv = document.getElementById("wrap");
    var contentdiv = document.getElementById("content");
    var allheader = document.getElementById("allheader");

    wrapdiv.style.minHeight = document.body.offsetHeight + "px";
    if (allheader != null) {
      contentdiv.style.minHeight = document.body.offsetHeight - allheader.offsetHeight - document.getElementById("footer").offsetHeight + "px";
    } else {
      contentdiv.style.minHeight = document.body.offsetHeight - document.getElementById("footer").offsetHeight + "px";
    }
</script>