.widget2
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.widget2_athemes_social_icons li
    padding: 0;
    text-align: center;
    border: none;


.widget2_athemes_social_icons li a [class^="fa"]:before
    width: 39px;
    margin: 0;
    font-size: 23px;
    line-height: 40px;

.widget2-wrap
  margin-bottom: block-margin !important
  @media mq-normal
    column(main-column)

.widget2-title
  color: #ccc
  text-transform: uppercase
  letter-spacing: 2px
  margin-bottom: .5em
  line-height: 1em
  font-weight: bold

.widget2
  color: color-grey
  ul, ol
    li
      display: inline-block
      zoom:1
      *display:inline
      padding-right: .75em
/* Having problems getting balanced white space between items
    li:before
      content: " | "
    li:first-child:before
      content: none
 */


 .widget2_athemes_social_icons li
    float: none;
